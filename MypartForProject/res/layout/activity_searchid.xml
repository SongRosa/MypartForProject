<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/searchid" >

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/whitelogo"
            android:onClick="LogoButtonClicked" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        
        <EditText 
            android:id="@+id/searchid_et_name"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:hint="이름을 입력해주세요"
            android:gravity="center"
            android:maxLength="10"
		    android:background="@drawable/textbox"/>        
        
        <EditText 
            android:id="@+id/searchid_et_email"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:hint="이메일을 입력해주세요"
            android:gravity="center"
            android:maxLength="25"
		    android:background="@drawable/textbox"/>
        
        <Button
			    android:id="@+id/searchid_btn_ok"
			    android:layout_width="305dp"
			    android:layout_height="48dp"
		        android:layout_margin="10dp"
			    android:background="@drawable/button_style"
			    android:text="확인"
			    android:textSize="20dp"
			    android:textColor="#FFFFFF"
			    android:onClick="SearchidButtonClicked" />
    </LinearLayout>
</LinearLayout>
