<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/searchid" >

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/whitelogo"
            android:onClick="LogoButtonClicked" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:layout_marginLeft="20dp"
        	android:layout_marginBottom="20dp"
            android:text="회원님의 아이디는"
            android:textSize="25dp"/>        
            
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            
	        <TextView
	            android:id="@+id/searchidconform_tv_id"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	        	android:layout_marginBottom="10dp"
	        	android:gravity="center"
	            android:text="딩동댕동"
	            android:textSize="35sp"
	            android:textStyle="bold"/>
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" 입니다."
	            android:textSize="25sp"/>            
        </LinearLayout> 
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">        
        
        <Button
		    android:id="@+id/searchidconform_btn_login"
		    android:layout_width="305dp"
		    android:layout_height="48dp"
	        android:layout_margin="10dp"
		    android:background="@drawable/button_style"
		    android:text="로그인하러가기"
		    android:textSize="20dp"
		    android:textColor="#FFFFFF"
		    android:onClick="GoLoginButtonClicked" />
        
        <Button
		    android:id="@+id/searchidconform_btn_searchpwd"
		    android:layout_width="305dp"
		    android:layout_height="48dp"
	        android:layout_margin="10dp"
		    android:background="@drawable/button_style"
		    android:text="비밀번호찾기"
		    android:textSize="20dp"
		    android:textColor="#FFFFFF"
		    android:onClick="GoSearchpwdButtonClicked" />
        
        
    </LinearLayout>
</LinearLayout>
